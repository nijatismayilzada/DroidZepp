<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.droidzepp.droidzepp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/droidzepp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".alarm.AlarmService$AlarmReceiver" ></receiver>
        <service android:name=".datacollection.SensorHandlerService" ></service>
        <service android:name=".classification.ClassifyService" ></service>
        <service android:name=".alarm.AlarmService" ></service>

    </application>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
